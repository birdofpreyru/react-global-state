{
  "extends": ["airbnb", "airbnb/hooks"],
  "rules": {
    "import/extensions": ["error", "always", {
      "js": "never",
      "ts": "never"
    }],
    "no-plusplus": 0,
    "react/jsx-one-expression-per-line": 0,
    "react/react-in-jsx-scope": 0
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}
