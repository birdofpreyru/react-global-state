{
  "extends": "@tsconfig/recommended",
  "compilerOptions": {
    "declaration": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "noUncheckedIndexedAccess": true,
    "outDir": "build",
    "paths": {
      "*": ["./*"]
    },
    "verbatimModuleSyntax": true
  }
}